---
import {
	HomeBentogrid,
	type BentoGridProps,
} from "@/components/elements/home-bentogrid";
import { HomeBlog } from "@/components/elements/home-blog";
import {
	HomeMarquee,
	type MarqueeProps,
} from "@/components/elements/home-marquee";
import { BackgroundAnimation } from "@/components/ui/background-animation";
import { Button, buttonVariants } from "@/components/ui/button";
import {
	Card,
	CardContent,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import { BookIcon, RocketIcon } from "lucide-react";
import config from "../../explainer.config";
import { cn } from "../lib/utils";

const posts = await getCollection("blog", (post) => {
	if (import.meta.env.DEV) {
		return true;
	}

	return post.data.publishedAt && new Date(post.data.publishedAt) <= new Date();
});

const header = {
	description:
		"Open source framework that makes developing Discord applications intuitive and powerful. Create complete, high-performance, production-quality applications with complete confidence.",
	actions: [
		{
			label: "Get started",
			href: config.urls.getStarted,
			icon: RocketIcon,
		},
		{
			label: "Documentation",
			href: config.urls.documentation,
			icon: BookIcon,
		},
	],
};

const cards = [
	{
		title: "🚀 Dart powered",
		description: "Robust and secure",
		content:
			"Mineral is built with Dart, a modern, fast, and secure programming language.",
	},
	{
		title: "🪴 Open source",
		description: "MIT licensed",
		content:
			"Mineral is an free and open source framework to build Discord bots. You can use the tools you need, and nothing more.",
	},
	{
