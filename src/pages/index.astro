const bentogrid: BentoGridProps = {
	subtitle: "Features",
	title: "Discover the power of Mineral",
	description:
		"Mineral is designed to help you build Discord applications with ease. It provides a wide range of features that make development faster and more efficient.",
	items: [
		{
			title: "Developer experience",
			subtitle: "Clean and lightweight API",
			description:
				"Mineral provides a clean and lightweight API, allowing you to build your bot with ease. It's designed to be easy to use and understand.",
			image:
				"https://tailwindcss.com/plus-assets/img/component-images/bento-01-speed.png",
		},
		{
			title: "Built-in tools",
			subtitle: "Built-in tools to help you build your bot",
			description:
				"Mineral provides a set of built-in tools to help you build your bot with ease. It's designed to be easy to use and understand.",
			image:
				"https://tailwindcss.com/plus-assets/img/component-images/bento-01-performance.png",
		},
		{
